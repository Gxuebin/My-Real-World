/* pages/message/components/item/components/user-info/user-info.wxss */
.user-info{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.avatar-image{
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.center{
  flex: 1;
}

.center-top{
  display: flex;
  margin-top: 2px;
}


.name{
  margin-right: 10px;
  font-weight: 400;
  font-size: 12px;
}

.time{
  margin-top: 15px;
  color: #969393;
  font-size: 10px;
}

.address-container{
  display: flex;
  align-items: center;
  color: #969393;
  font-size: 10px;
}

.address-icon{
  width: 10px;
  height: 10px;
}
